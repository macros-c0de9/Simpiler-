# Sample environment variables for Simpiler
# Copy this file to .env and modify as needed

# Database configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<your_secure_password>
POSTGRES_DB=simpiler
DATABASE_URL=postgresql://postgres:<your_secure_password>@db:5432/simpiler

# JWT configuration
JWT_SECRET_KEY=<your_secure_jwt_secret>

# Server configuration
FLASK_APP=app.py
FLASK_ENV=production
DEBUG=False
PORT=5000

# Redis configuration
REDIS_URL=redis://redis:6379/0

# File storage
UPLOAD_FOLDER=/tmp/simpiler/uploads
BINARY_FOLDER=/tmp/simpiler/binaries
ARDUINO_WORK_DIR=/tmp/simpiler/work

# API configuration
API_BASE_URL=https://api.simpiler.com
